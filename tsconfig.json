{
  "compilerOptions": {
    "allowJs": false,
    "outDir": "./dist",
    "module": "commonjs",
    "declaration": true,
    "target": "es5",
    "lib": ["esnext", "dom"],
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "jsx": "react",
    "esModuleInterop": true,
    "types": [
      "@types/jest"
    ]
  },
  "include": ["pattern-case.ts"],
  "exclude": ["node_modules", "dist", "test"]
}
